@model CarClass

@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">

    <h1 style="color:darkcyan;">CarClass detail</h1>

    <div class="client-content mt-5">
        <h4 style="color:darkcyan" class="my-3">Image</h4>
        <img style="width:400px; height:200px;" src="~/assets/img/home/@Model.Image" />
    </div>

    <h4 style="color:darkcyan;" class="my-3">Name</h4>
    <input type="text" class="form-control" id="customFile" asp-for="Name" disabled="disabled" />

    <h4 style="color:darkcyan" class="my-3">StartPrice</h4>
    <input type="text" class="form-control" id="customFile" asp-for="StartPrice" disabled="disabled" />

    <a class="btn btn-info mt-3" asp-action="Index">
        Back
    </a>

</div>

