@model IEnumerable<OrderItem>
@{
    ViewData["Title"] = "Index";
}

<table class="table">

    <thead>
        <tr>

            <th>
                #
            </th>

            <th>
                Full Name
            </th>

            <th>
                Price
            </th>

            <th>
                Date
            </th>

            <th>
                Status
            </th>

            <th>
                Operation
            </th>

            <th></th>

        </tr>
    </thead>
    <tbody>

        @foreach (OrderItem order in Model)
        {

            <tr>

                <td>
                    @order.Id
                </td>

                <td>
                    @order.Phone
                </td>

                <td>
                    <span>₼</span>@order.Car.Price
                </td>

                <td>
                    @order.Date.ToString("dd.MMMM.yyyy HH:mm")
                </td>

                    <td>
                        <button class="btn btn-warning">
                            @order.Status
                        </button>
                    </td>

                <td>

                    <a style="display:flex;justify-content:center;align-items:center" class="btn btn-warning" asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id">Details</a>

                </td>

            </tr>
        }
    </tbody>
</table>

