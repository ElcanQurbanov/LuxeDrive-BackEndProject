@model BlogEditVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">

    <h1 style="color:darkcyan;">Blog edit</h1>

    <form class="form-sample" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">

        <h4 class="my-3">Image</h4>

        @foreach (var item in Model.blogImages)
        {
            <div class="blog-content my-5">
                <img style="width:400px; height:200px;" src="~/assets/img/blog/@item.Image" />
            </div>
        }

        <input class="form-control" asp-for="Photos" />
        <span class="text-danger" asp-validation-for="Photos"></span>

        <h4 class="my-3">Title</h4>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>

        <h4 class="my-3">Description</h4>
        <input class="form-control"asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>



