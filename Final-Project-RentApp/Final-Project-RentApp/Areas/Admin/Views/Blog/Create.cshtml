@model BlogCreateVM

@{
    ViewData["Title"] = "Create";
}


<div class="container my-5">
    <h1 style="color:darkcyan; text-align:center">Blog create</h1>

    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <h4 class="my-3" style="color:darkcyan">Images</h4>
            <input class="form-control " id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>

        <div class="form-group">
            <h4 class="my-3" style="color:darkcyan">Title</h4>
            <input type="text" placeholder="Title" class="form-control" id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <h4 class="my-3" style="color:darkcyan">Description</h4>
            <textarea class="form-control" id="description-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

