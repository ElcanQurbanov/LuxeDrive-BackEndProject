@model Quarantee

@{
    ViewData["Title"] = "Quarantee";
}


<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right;">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">Operation</th>
                </tr>
            </thead>
            <tbody>
                
                

                    <tr>

                        <td class="py-1">
                            <img src="~/assets/img/home/@Model.QuaranteeImages.FirstOrDefault().Image" style="width:70px; height:70px; border-radius:50%" alt="image">
                        </td>

                        <td class="py-1">
                            @Html.Raw(Model.Title)
                        </td>

                        <td>
                        <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@Model.Id">
                                Info
                            </a>

                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">
                                Edit
                            </a>

                        <form asp-action="Delete" asp-route-id="@Model.Id" style="display:inline-block;" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </td>



                    </tr>
                


            </tbody>
        </table>
    </div>


</div>

