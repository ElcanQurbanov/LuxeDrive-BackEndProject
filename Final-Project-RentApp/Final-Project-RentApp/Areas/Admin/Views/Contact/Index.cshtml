@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Contact";
}


<div class="container my-5">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var contact in Model)
                {
                    <tr>

                        <td class="py-1">
                            @contact.FullName
                        </td>

                        <td class="py-1">
                            @contact.Email
                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@contact.Id">
                                Info
                            </a>

                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@contact.Id">
                                Edit
                            </a>

                            <form asp-action="Delete" asp-route-id="@contact.Id" style="display:inline-block;" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </td>



                    </tr>
                }


            </tbody>
        </table>
    </div>


</div>

