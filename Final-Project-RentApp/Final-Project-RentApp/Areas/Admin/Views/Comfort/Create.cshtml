@model ComfortCreateVM

@{
    ViewData["Title"] = "Create";
}


<div class="container my-5">
    <h1 style="text-align:center">Comfort create</h1>

    <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <h4 class="my-3" style="color:blue">Add Title </h4>
        <input type="text" placeholder="Title" class="form-control" id="customFile" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>

        <h4 class="my-3" style="color:blue">Add Phone </h4>
        <input type="text" placeholder="Phone" class="form-control" id="customFile" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>

        <h4 class="my-3" style="color:blue">Add Description </h4>
        <input type="text" placeholder="Description" class="form-control" id="customFile" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

