@model List<CarIndexVM>

@{
    ViewData["Title"] = "Car";
}


<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right;">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Price</th>
                    @*<th scope="col">Extra</th>*@
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var car in Model)
                {

                    <tr>

                        <td class="py-1">
                            <img src="~/assets/img/home/@car.Image" style="width:115px; height:112px; border-radius:50%; object-fit:cover;" alt="image">
                        </td>

                        <td>
                            @car.Name
                        </td>

                        <td>
                            @car.Price
                        </td>

                       @* <td>
                            @car.Extra
                        </td>*@
                       
                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@car.Id">
                                Info
                            </a>

                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@car.Id">
                                Edit
                            </a>

                            <form asp-area="Admin" asp-controller="Car" asp-action="Delete" asp-route-id="@car.Id" style="display:inline-block;" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </td>


                    </tr>
                }


            </tbody>
        </table>
    </div>


</div>

