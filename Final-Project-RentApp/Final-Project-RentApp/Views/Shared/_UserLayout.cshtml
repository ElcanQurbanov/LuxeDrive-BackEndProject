<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="icon" href="~/assets/img/icon/icon.png">
    @await RenderSectionAsync("Style", required: false)
    <title>@ViewData["Title"]</title>
    @*<title>LuxeDrive</title>*@
</head>

<body>

    <header>

        <section id="navbar">

            <div class="container">

                <div class="row">

                    <div class="col-3">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="~/assets/img/home/logo.png" alt="">
                            </a>
                        </div>
                    </div>

                    <div class="col-5">
                        <div class="nav-menu">

                            @RenderSection("NavBar", false)

                        </div>
                    </div>

                    <div class="col-4">

                        <div class="icons">

                            <div class="search">

                                <i class="fa-solid fa-magnifying-glass open-close"></i>

                                <div class="search-input">
                                    <input placeholder="Type to Search..." type="text">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </div>

                            </div>

                            <a href="cart.html"><i class="fa-solid fa-car"></i></a>
                            <i class="fa-solid fa-user user"></i>


                            <div class="login-register d-none">
                                <ul>

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post">
                                                <button type="submit" class="dropdown-item">Logout</button>
                                            </form>
                                        </li>

                                        <li>
                                            <a class="dropdown-item" href="#">@User.Identity.Name</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                                        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                                    }

                                </ul>
                            </div>

                        </div>


                    </div>

                </div>

            </div>

        </section>




    </header>

    @RenderBody()



    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
            integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/slick/slick.min.js"></script>
    <script src="https://kit.fontawesome.com/09a7df35a3.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="~/assets/js/account.js"></script>
    <script src="~/assets/js/search.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>