<main>

    <section style="background-image: url('/assets/img/home/slider4.jpg')" id="login">
        <div class="form-box">
            <div class="form-value">
                <div asp-validation-summary="All" style="color:red; margin-bottom:-10px"></div>
                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <h2>Reset Password</h2>

                    <div class="inputbox">
                        <i class="fa-solid fa-envelope"></i>
                        <input asp-for="Password" required>
                        <label for="">Password</label>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="inputbox">
                        <i class="fa-solid fa-envelope"></i>
                        <input asp-for="ConfirmPassword" required>
                        <label for="">Confirm password</label>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <button type="submit">Send</button>

                    <input type="hidden" asp-for="Token" value="@Model.Token" />
                    <input type="hidden" asp-for="UserId" value="@Model.UserId" />


                    <div class="register">
                        <a style="color:white; text-decoration:none;" asp-action="Login">Back to login</a>
                       
                    </div>

                </form>

            </div>
        </div>
    </section>



</main>


